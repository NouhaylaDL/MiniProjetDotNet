@model IEnumerable<Salarie>

    @{
        ViewData["Title"]="Acueil";
    }

    <table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col"> ID</th>
      <th scope="col">image</th>
      <th scope="col">Nom</th>
      <th scope="col">Prenom</th>
      <th scope="col">Email</th>
      <th scope="col">Détail</th>
      <th scope="col">Modifier</th>
      <th scope="col">Supprimer</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">@item.ID</th>
            <td>@item.Image</td>
            <td>@item.Nom</td>
            <td>@item.Prenom</td>
            <td>@item.Email</td>
            <td><a asp-controller="Salarie" asp-action="Details" asp-route-id ="@item.ID" >Détail</a></td>
            <td><a asp-controller="Salarie" asp-action="Modifier" asp-route-id ="@item.ID" >Modifier</a></td>
            <td><a asp-controller="Salarie" asp-action="Supprimer" asp-route-id ="@item.ID" >Supprimer</a></td>
        </tr>
    }
  </tbody>
</table>
